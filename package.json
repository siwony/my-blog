{
  "name": "my-tech-blog-tests",
  "version": "1.0.0",
  "description": "Test suite for My Tech Blog features including Prism.js, command palette, and category navigation",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:report": "node scripts/test-runner.js",
    "css:check": "node scripts/css-conflict-detector.js",
    "css:check-safe": "node scripts/css-conflict-detector.js || echo 'CSS conflicts detected but continuing...'",
    "prebuild": "npm run css:check-safe",
    "build": "bundle exec jekyll build",
    "build:dev": "bundle exec jekyll build --config _config.yml,_config_development.yml && gulp build:dev",
    "build:prod": "bundle exec jekyll build --config _config.yml,_config_production.yml && NODE_ENV=production gulp build:prod",
    "postprocess": "gulp build:prod",
    "serve": "bundle exec jekyll serve",
    "serve:prod": "npm run build:prod && cd _site && python3 -m http.server 8080",
    "test:prod": "./test-prod.sh",
    "clean": "gulp clean"
  },
  "devDependencies": {
    "critical": "^7.2.1",
    "del": "^6.1.1",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.3.0",
    "gulp-concat": "^2.6.1",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^3.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-uglify": "^3.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "yargs": "^17.7.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "assets/js/**/*.js",
      "scripts/**/*.rb",
      "!assets/js/prism-test.js"
    ],
    "coverageDirectory": "tests/coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "dependencies": {
    "ninja-keys": "^1.2.2"
  }
}
